<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <TextView
            android:id="@+id/nameHeroTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="21sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hero"/>

    <TextView
            android:id="@+id/genderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="@string/gender"
            app:layout_constraintTop_toBottomOf="@+id/nameHeroTextView"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/valueGenderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/genderTextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/genderTextView"
            tools:text="Gender"/>

    <TextView
            android:id="@+id/cultureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="@string/culture"
            app:layout_constraintTop_toBottomOf="@+id/genderTextView"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/valueCultureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/cultureTextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/cultureTextView"
            tools:text="culture"/>

    <TextView
            android:id="@+id/bornTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="@string/born"
            app:layout_constraintTop_toBottomOf="@+id/cultureTextView"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/valueBornTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/bornTextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/bornTextView"
            tools:text="10.10.1985"/>
</android.support.constraint.ConstraintLayout>